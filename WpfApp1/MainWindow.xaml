<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Right" Orientation="Horizontal" Margin="0">
            <Button Margin="10">Ok</Button>
            <Button Margin="10">
                <Button.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                        <GradientStop Color="#FF5FC33A" Offset="1"/>
                        <GradientStop Color="#FFEA1313"/>
                    </LinearGradientBrush>
                </Button.Foreground> Cancel
            </Button>
        </StackPanel>
        <TextBox DockPanel.Dock="Top" Margin="10" SpellCheck.IsEnabled="True" TextWrapping="Wrap"></TextBox>
    </DockPanel>
</Window>
